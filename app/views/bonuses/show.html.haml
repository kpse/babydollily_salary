- model_class = Bonus
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:employee_id)
      \:
  %dd= @bonus.employee.full_name
  %dt
    %strong
      = model_class.human_attribute_name(:project)
      \:
  %dd= @bonus.project
  %dt
    %strong
      = model_class.human_attribute_name(:annual)
      \:
  %dd= @bonus.annual
  %dt
    %strong
      = model_class.human_attribute_name(:granted_at)
      \:
  %dd= date_output @bonus.granted_at
  %dt
    %strong
      = model_class.human_attribute_name(:sponsor)
      \:
  %dd= @bonus.sponsor
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    bonuses_path, :class => 'btn'                            |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_bonus_path(@bonus), :class => 'btn'                 |