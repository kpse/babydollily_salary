<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @employee.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @employee.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:line_of_business) %>:</strong></dt>
  <dd><%= @employee.line_of_business %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dug) %>:</strong></dt>
  <dd><%= @employee.dug %></dd>
  <dt><strong><%= model_class.human_attribute_name(:du) %>:</strong></dt>
  <dd><%= @employee.du %></dd>
  <dt><strong><%= model_class.human_attribute_name(:post) %>:</strong></dt>
  <dd><%= @employee.post %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duty) %>:</strong></dt>
  <dd><%= @employee.duty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:charge_area) %>:</strong></dt>
  <dd><%= @employee.charge_area %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_rank) %>:</strong></dt>
  <dd><%= @employee.client_rank %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
