<%- model_class = Employee -%>
<div class="page-header">
  <div class="row">
    <div class="span10">
      <h1><%= t '.title', :default => model_class.model_name.human %></h1>
    </div>
    <div class="span2">
      <%= link_to "导出Excel", employees_path(params.merge(format: 'xls')), :class => 'btn btn-primary export-xls' %>
    </div>
  </div>
</div>
<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:number) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:line_of_business) %></th>
    <th><%= model_class.human_attribute_name(:dug) %></th>
    <th><%= model_class.human_attribute_name(:du) %></th>
    <th><%= model_class.human_attribute_name(:post) %></th>
    <th><%= model_class.human_attribute_name(:duty) %></th>
    <th><%= model_class.human_attribute_name(:charge_area) %></th>
    <th><%= model_class.human_attribute_name(:client_rank) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @employees.each do |employee| %>
    <tr>
      <td><%= link_to employee.number, employee_path(employee) %></td>
      <td><%= link_to employee.name, employee_path(employee) %></td>
      <td><%= employee.line_of_business %></td>
      <td><%= employee.dug %></td>
      <td><%= employee.du %></td>
      <td><%= employee.post %></td>
      <td><%= employee.duty %></td>
      <td><%= employee.charge_area %></td>
      <td><%= employee.client_rank %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_employee_path(employee), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    employee_path(employee),
                    :method => :delete,
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
