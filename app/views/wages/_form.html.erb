<%= form_for @wage, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :employee_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :employee_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :basic, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :basic, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :post, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :post, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :compensation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :compensation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :seniority_allowance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :seniority_allowance, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :communication_allowance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :communication_allowance, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :accommodation_allowance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :accommodation_allowance, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :transportation_allowance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :transportation_allowance, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :monthly_wages_standard, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :monthly_wages_standard, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :travel_allowance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :travel_allowance, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :monthly_total, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :monthly_total, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                wages_path, :class => 'btn' %>
  </div>
<% end %>
