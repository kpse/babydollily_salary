      <%= f.text_field :dec, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                adjustments_path, :class => 'btn' %>
  </div>
<% end %>
